@model IEnumerable<Product>

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>
                    <img src="@item.Image" alt="@item.Name" style="max-width: 100px; height: auto;" />
                </td>
            </tr>
        }
    </tbody>
</table>